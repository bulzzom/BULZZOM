<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="40dp"
        android:height="40dp"
        android:bottom="10dp"
        android:gravity="center"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">

        <selector>
            <item
                android:drawable="@drawable/off_button"
                android:state_checked="true" />

            <item
                android:drawable="@drawable/on_button"
                android:state_checked="false" />
        </selector>
    </item>
</layer-list>